<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3300"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login_page"
    tools:overrideLibrary="com.firebase.ui">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:background="@android:color/transparent"
        android:ems="0"
        android:gravity="center"
        android:text="CLASSified"
        android:textColor="#ffe6e6"
        android:textSize="65dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="148dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/CAS_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="launchCas"
        android:padding="12dp"
        android:text="Login"
        android:textSize="20dp"
        android:layout_marginTop="82dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CAS_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:paddingTop="20dp"
        android:text="Anonymous chat for Princeton courses"
        android:textColor="@android:color/white"
        android:textSize="20dp" />


</RelativeLayout>